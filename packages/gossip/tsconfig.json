{
    "include": [
      "src/**/*.ts",
      "src/*.ts",
    ],
    "exclude": [
      "node_modules",
      "**/node_modules/*"
    ],
    "compilerOptions": {
      "outDir": "./dist",
      "target": "es6",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "forceConsistentCasingInFileNames": true,
      "noUnusedLocals": true,
      "strictNullChecks": true
    }
  }