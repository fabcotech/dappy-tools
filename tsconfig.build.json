{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [
      "mocha",
      "node"
    ],
    "jsx": "react",
    "noEmit": false,
    "lib": [ "es2015" ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
